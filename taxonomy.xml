        <value id="DEIR" name="deixisRef" />
        <value id="EVI" name="evident" />
        <value id="GEN" name="gender" />
        <value id="MOD" name="mood" />
        <value id="NOUC" name="nounClass" />
        <value id="NUM" name="number" />
        <value id="PER" name="person" />
        <value id="POL" name="polarity" />
        <value id="POLI" name="polite" />
        <value id="TEN" name="tense" />
        <value id="VF" name="verbForm" />
        <value id="VOI" name="voice" />
      </subfacet>
      <subfacet id="LF" name="LexicalFeature" dependency="UDv2">
        <value id="ABBR" name="abbreviation" />
        <value id="FORW" name="foreignWord" />
        <value id="NUMT" name="numeralType" />
        <value id="POSS" name="possessive" />
        <value id="PRONT" name="pronominalType" />
        <value id="REF" name="reflexive" />
      </subfacet>
    </subfacets>
  </facet>
  <facet id="UNI" name="Unit" dependency="none">
    <value id="GRA" name="grapheme" />
    <value id="AFF" name="affix" />
    <value id="LEM" name="lemma" />
    <value id="WOR" name="word" />
    <value id="MWE" name="multiwordExpression" />
    <value id="PHR" name="phrase" />
    <value id="SEN" name="sentence" />
  </facet>
  <facet id="PHE" name="Phenomenon" dependency="none">
    <value id="OMI" name="omission" />
    <value id="ADD" name="addition" />
    <value id="MISF" name="misformation" />
    <value id="MISO" name="misordering" />
    <value id="UNT" name="untranslated" />
    <value id="AMB" name="ambiguous" />
  </facet>
  <facet id="LEV" name="Level" dependency="none" multiValued="true">
    <value id="PHO" name="phonology" />
    <value id="ORTH" name="orthography" />
    <value id="GRA" name="grammar" />
    <value id="SEM" name="semantics" />
    <value id="PRAG" name="pragmatics" />
    <value id="DIS" name="discourse" />
    <value id="SOC" name="sociolinguistics" />
  </facet>
  <facet id="MD" name="Metadata" dependency="none">
    <subfacets>
      <subfacet id="LANG" name="Language" dependency="ISO639-3" allValuesFromDependencyAccepted="true" />
      <subfacet id="GEN" name="Genre" dependency="none">
        <value id="ESS" name="essay" />
        <value id="FORL" name="formalLetter" />
        <value id="FORP" name="forumPost" />
        <value id="INFL" name="informalLetter" />
        <value id="INTV" name="interview" />
      </subfacet>
      <subfacet id="MED" name="Medium" dependency="none">
        <value id="WRI" name="written" />
        <value id="SPO" name="spoken" />
      </subfacet>
      <subfacet id="ERRM" name="ErrorMaker" dependency="none">
        <value id="HS" name="heritageSpeaker" linkedFacet="DF" />
        <value id="NS" name="nativeSpeaker" linkedFacet="DF" />
        <value id="NNS" name="nonNativeSpeaker" linkedFacet="DF" />
        <value id="TOO" name="tool" linkedFacet="T" />
      </subfacet>
      <!-- This facet is problematic because, it may be called something else instead of facet!!! -->
      <subfacet id="DF" name="DemographicFeature">
        <value id="AGE" name="age" />
        <value id="EL" name="educationLevel" />
        <value id="FLA" name="firstLanguage" dependency="LANG" />
        <value id="G" name="gender" />
        <value id="PL" name="proficiencyLevel" dependency="CEFR" />
        <value id="FL" name="foreignLanguages" dependency="LANG" />
      </subfacet>
      <subfacet id="T" name="Tool">
        <value id="GEC" name="grammarErrorCorrection" />
        <value id="MT" name="machineTranslation" />
      </subfacet>
    </subfacets>
  </facet>
</taxonomy>
