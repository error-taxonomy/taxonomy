      <subfacet id="POS" name="PartOfSpeech" dependency="UDv2">
        <value id="ADJ" name="adjactive" />
        <value id="ADP" name="adposition" />
        <value id="ADV" name="adverb" />
        <value id="AUX" name="auxiliary" />
        <value id="CCONJ" name="coordinatingConjunction" />
        <value id="DET" name="determiner" />
        <value id="INTJ" name="interjection" />
        <value id="NOUN" name="noun" />
        <value id="NUM" name="numeral" />
        <value id="PART" name="particle" />
        <value id="PRON" name="pronoun" />
        <value id="PROPN" name="properNoun" /> 
        <value id="PUNCT" name="punctuation" />
        <value id="SCONJ" name="subordinatingConjunction" />
        <value id="SYM" name="symbol" />
        <value id="VERB" name="verb" />
        <value id="X" name="other" />
      </subfacet>
      <subfacet id="IF" name="InflectionalFeature" dependency="UDv2">
        <value id="ANI" name="animacy" />
        <value id="ASP" name="aspect" />
        <value id="CAS" name="case" />
        <value id="CLU" name="clusivity" />
        <value id="DEF" name="definite" />
